#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

### Configure environment

set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output
unset GIT_DIR     # Avoid GIT_DIR leak from previous build steps

### Formatting utilities

indent() {
  sed -u 's/^/       /'
}

### Constants

CURL_VERSION=7.52.1

### Configure directories

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

echo "-----> Cloning nghttp2"
git clone https://github.com/nghttp2/nghttp2.git | indent

echo "-----> Building nghttp2"
pushd nghttp2
NGHTTP2_VERSION=$(git describe --tags `git rev-list --tags --max-count=1`)
git checkout $NGHTTP2_VERSION
echo "Checked out $NGHTTP2_VERSION" 2>&1 | indent
autoreconf -i 2>&1 | indent
automake 2>&1 | indent
autoconf 2>&1 | indent
./configure --prefix=$BUILD_DIR/vendor 2>&1 | indent
make 2>&1 | indent
make install 2>&1 | indent
popd

echo "-----> Downloading curl $CURL_VERSION sources"
DOWNLOAD_URL="http://archive.ubuntu.com/ubuntu/pool/main/c/curl/curl_$CURL_VERSION.orig.tar.gz"
curl -sL "$DOWNLOAD_URL" > curl_$CURL_VERSION.orig.tar.gz 2>&1 | indent

echo "-----> Building curl"
tar -xf curl_$CURL_VERSION.orig.tar.gz
pushd curl-$CURL_VERSION
./configure --prefix=$BUILD_DIR/vendor --with-ssl --with-nghttp2=$BUILD_DIR/vendor 2>&1 | indent
make 2>&1 | indent
make install 2>&1 | indent
popd

echo "-----> Setting up environment"
mkdir -p $BUILD_DIR/.profile.d
cp $BP_DIR/profile/* $BUILD_DIR/.profile.d/
