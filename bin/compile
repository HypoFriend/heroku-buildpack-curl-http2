#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

### Configure environment

set -o errexit    # always exit on error
set -o pipefail   # don't ignore exit codes when piping output
unset GIT_DIR     # Avoid GIT_DIR leak from previous build steps

### Constants

CURL_VERSION=7.52.1

### Configure directories

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

echo "-----> Downloading curl $CURL_VERSION sources"
DOWNLOAD_URL="http://archive.ubuntu.com/ubuntu/pool/main/c/curl/curl_$CURL_VERSION.orig.tar.gz"
curl -sL "$DOWNLOAD_URL" > curl_$CURL_VERSION.orig.tar.gz

echo "-----> Unpacking"
tar -xf curl_$CURL_VERSION.orig.tar.gz
pushd curl-$CURL_VERSION

echo "-----> Configuring curl"
./configure --prefix=$BUILD_DIR/vendor

echo "-----> Building curl"
make

echo "-----> Vendoring curl"
make install
popd

echo "-----> Setting up environment"
mkdir -p $BUILD_DIR/.profile.d
cp $BP_DIR/profile/* $BUILD_DIR/.profile.d/
